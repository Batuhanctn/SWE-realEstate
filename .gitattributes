# Auto detect text files and perform LF normalization
* text=auto

# Force specific files to always use LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.svg text eol=lf
*.cs text eol=lf

# Binary files should not be modified
*.jpg binary
*.png binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.pdf binary
